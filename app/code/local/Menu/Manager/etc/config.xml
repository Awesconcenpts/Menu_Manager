<config>
    <modules>
        <Menu_Manager>
            <version>0.1.0</version>
        </Menu_Manager>
    </modules>
    <global>
        <models>
            <menu_manager>
                <class>Menu_Manager_Model</class>
                <resourceModel>menu_manager_resource</resourceModel>
            </menu_manager>
            <menu_manager_resource>
                <class>Menu_Manager_Model_Resource</class>
                <entities>
                    <menu>
                        <table>menu_manager_menu</table>
                    </menu>
                    <menu_item>
                        <table>menu_manager_menu_item</table>
                    </menu_item>
                    <menu_store>
                        <table>menu_manager_menu_store</table>
                    </menu_store>
                </entities>
            </menu_manager_resource>
        </models>
        <helpers>
            <menu_manager>
                <class>Menu_Manager_Helper</class>
            </menu_manager>
        </helpers>
        <blocks>
            <menu_manager>
                <class>Menu_Manager_Block</class>
            </menu_manager>
        </blocks>
        <resources>
            <menu_manager_setup>
                <setup>
                    <module>Menu_Manager</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </menu_manager_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <menu_manager_admin>
                <use>admin</use>
                <args>
                    <module>Menu_Manager</module>
                    <frontName>menumanager</frontName>
                </args>
            </menu_manager_admin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <menu_manager>
                    <file>menu_manager.xml</file>
                </menu_manager>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <menu_manager>
                    <file>menu_manager.xml</file>
                </menu_manager>
            </updates>
        </layout>
    </frontend>
</config>